@model QuanLiThuVien.Models.LICHSUMUONPHONG

@{
    ViewBag.Title = "UpdateBrrowedRoom";
    Layout = "~/Views/_Layout.cshtml";
}
<link rel="stylesheet" href="@Url.Content("~/Content/css/jquery.datetimepicker.css")">
<script src="@Url.Content("~/Content/js/jquery.js")"> </script>
<script src="@Url.Content("~/Content/js/jquery.datetimepicker.js")"> </script>
<div class="col-md-4">
    <ul class="list-group">
        <li class=" list-group-item"><a href="~/Reader/GetListBorrowedRoom"> Danh sách đặt phòng </a> </li>
        <li class=" list-group-item"><a href="~/Reader/BorrowedRoom"> Đặt phòng </a> </li>
    </ul>
</div>
<div class="col-md-8">
    <div class="panel panel-success" align="center">
        <div class="panel-heading">
            <font size="6" color="blue" face="arial"><b>   Chỉnh Sửa Đặt Phòng </b> </font>
        </div>
    </div>
    <form action="~/Reader/SaveUpdateRoom" method="get" class="form-horizontal" role="form">
        <input type='hidden'  name="ID" value=@Model.ID />
        <div class="form-group">
            <label for="inputPassword3" class="col-sm-2 control-label">Phòng </label>
            <div class="col-sm-10">
                <select name="IDPhong">
                    <option> 1 </option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label" > Thời gian mượn: </label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id='ID_ThoiGianMuon' name="ThoiGianMuon" value= '@Model.ThoiGianMuon' />
            </div>
        </div>
        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label"> Thời gian trả: </label>
            <div class="col-sm-10">
                <input type='text' class="form-control" id='ID_ThoiGianTra' name="ThoiGianTra" value= '@Model.ThoiGianTra' />
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Lưu</button>
            </div>
        </div>
    </form>
</div>
<script>
    $(document).ready(function () {

        $("#ID_ThoiGianMuon").datetimepicker();
        $("#ID_ThoiGianTra").datetimepicker();
    });
</script>

