@model IEnumerable<QuanLiThuVien.Models.LOPTAPHUAN>

@{
    ViewBag.Title = "ViewListClassTraining";
    Layout = "~/Views/_Layout.cshtml";
}


<div class="container">
    <div class="row" style="height:30px;"></div>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h1 style="font-size:25px" padding-bottom="30px;"> DANH SÁCH LỚP TẬP HUẤN </h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-1"> </div>
        <div class="col-md-8">
            <div class="table">
                <table class="table table-condensed">
                    <tr>
                        <td>
                            <b> STT </b>
                        </td>
                        <th>
                            Ngày
                        </th>
                        <th>
                            Phòng
                        </th>
                        <th>
                            Thời gian
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Ngay)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Phong)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ThoiGian)
                            </td>
                            <td>
                                @Html.ActionLink("Xem chi tiết", "ViewClassDetail", new { id = item.ID })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>