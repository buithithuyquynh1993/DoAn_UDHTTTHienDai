@{
    ViewBag.Title = "BorrowedRoom";
    Layout = "~/Views/_Layout.cshtml";
}
<div class="panel panel-success" align="center">
    <div class="panel-heading">
        <font size="6" color="blue" face="arial"><b>   Borrowed Room </b> </font>
    </div>
</div>
<div class="col-md-4">
    <ul class="list-group">
        <li class=" list-group-item"><a href="~/Employee/BorrowedRoom"> Đặt phòng </a> </li>
        <li class=" list-group-item"><a href="~/Public/GetListBorrowedRoom"> Trang chủ </a> </li>
    </ul>
</div>
<div class="col-md-8">
    <form action="~/Phong/SaveBorrowedRoom" method="get" class="form-horizontal" role="form">
        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label"> Mã Độc Giả: </label>
            <div class="col-sm-10">
                <input type="text" class="form-control" placeholder="Mã độc giả" name="IDDocGia">
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword3" class="col-sm-2 control-label">Phòng </label>
            <div class="col-sm-10">
                <select name="IDPhong">
                    <option> 1 </option>
                </select>
            </div>
        </div>
         <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label"> Thời gian mượn: </label>
            <div class="col-sm-10">     
             <input type='datetime-local'  class="form-control" id='ID_ThoiGianMuon' name="ThoiGianMuon" />
            </div>
         </div>
        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label"> Thời gian trả: </label>
            <div class="col-sm-10">
                <input type='datetime-local' class="form-control" id='ID_ThoiGianTra' name="ThoiGianTra" />
            </div>       
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Sign in</button>
            </div>
        </div>
</form>
</div>
